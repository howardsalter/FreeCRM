                        <label for="inputPassword" class="sr-only">Password</label>
                        <input type="password" id="inputPassword" class="form-control" placeholder="Password" style="margin-top: 10px;" required>
                        <button class="btn btn-lg btn-primary btn-block" id="btnModalLogin" type="submit" style="margin-top: 20px">Sign in</button>
                        <p class="mt-5 mb-3 text-muted">&copy; 2020 First Touch Tech, Inc.</p>
                    </form>
                    <form method="post" action="dashboard" id="hiddenLogin" />
                        <input type="hidden" id="userid" name="userid" />
                    </form>
                </div>
            </div>    
        </div>
